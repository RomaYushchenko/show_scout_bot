<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="009.01" author="shalaev" runOnChange="true">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="show_scout_episode"/>
            </not>
        </preConditions>

        <createTable tableName="show_scout_episode">
            <column name="episode_id" type="UUID">
                <constraints primaryKey="true" primaryKeyName="tb_episode_pk" nullable="false"/>
            </column>
            <column name="show_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="episode_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="summary" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="season" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="episode_number" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="air_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="air_time" type="TIME">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>