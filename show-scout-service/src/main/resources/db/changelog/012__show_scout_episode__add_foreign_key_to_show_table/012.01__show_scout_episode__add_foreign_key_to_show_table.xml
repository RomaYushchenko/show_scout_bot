<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="012.01" author="shalaev" runOnChange="true">
        <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="show_scout_episode"/>
                <tableExists tableName="show_scout_show"/>
            </and>
        </preConditions>

        <addForeignKeyConstraint baseTableName="show_scout_episode"
                                 baseColumnNames="show_id"
                                 referencedTableName="show_scout_show"
                                 referencedColumnNames="show_id"
                                 constraintName="fk_episode_show"/>
    </changeSet>

</databaseChangeLog>